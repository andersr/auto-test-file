{
  "name": "auto-test-file",
  "description": "Auto-generate test files in a watched folder",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersr/auto-test-file"
  },
  "keywords": [
    "testing",
    "utility",
    "javascript"
  ],
  "author": "Anders Ramsay",
  "bugs": {
    "url": "https://github.com/andersr/auto-test-file/issues"
  },
  "homepage": "https://github.com/andersr/auto-test-file/#readme",
  "license": "MIT",
  "bin": {
    "atf": "bin/cli"
  },
  "scripts": {
    "dev": "yarn clean && yarn tsc:watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc:watch": "tsc -w",
    "tsindex": "cti clean ./src && cti create ./src",
    "tsindex:watch": "chokidar './src/**/*.ts' -i '/test|index/' -c 'yarn tsindex' "
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/command-line-args": "^5.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "chokidar-cli": "^1.2.2",
    "create-ts-index": "^1.9.1",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "ts-cleaner": "^1.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "concurrently": "^4.1.0",
    "create-file": "^1.0.1"
  }
}
